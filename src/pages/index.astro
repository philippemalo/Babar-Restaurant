      //   return item;
      // }

      // for (let i = 0; i < babarLetters.length; i++) {
      //   console.log(babarLetters.item(i).style.fill);
      //   babarLetters.item(i).addEventListener("mouseover", () => {
      //     let possibleColors = [
      //       "#A87E23",
      //       "#FFFEFD",
      //       "rgb(50,50,50)",
      //       "rgb(252,241,219)",
      //     ];
      //     this.style.fill = getRandomItem(possibleColors);
      //     console.log(letter.style.fill);
      //   });
      // }
    });

    // ELEPHANT MOVEMENT FUNCTION
    let image = document.getElementById("elephant");
    let imageContainer = document.getElementById("elephant-container");

    let prevScrollpos = window.scrollY;

    addEventListener("scroll", function () {
      let imageRect = image.getBoundingClientRect();
      console.log(imageRect.y);
      let currentScrollPos = window.scrollY;
      if (currentScrollPos > prevScrollpos) {
        image.style.transform = "scaleX(-1)";
        image.style.left =
          (imageRect.bottom / window.innerHeight) * window.innerWidth + "px";
        console.log(image.style.left);
      } else if (currentScrollPos < prevScrollpos) {
        image.style.transform = "scaleX(1)";
        image.style.left =
          (imageRect.bottom / window.innerHeight) * window.innerWidth + "px";
      }
      prevScrollpos = currentScrollPos;
    });

    setTimeout(() => {
      let mobileNavbar = document.getElementById("mobile-navbar");
      mobileNavbar.style.bottom = "0";
    }, 3000);
  </script>
</html>

<style>
  #main-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }
  @media screen and (max-width: 500px) {
    body {
      margin-top: 3rem;
    }
