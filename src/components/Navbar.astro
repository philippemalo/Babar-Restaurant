---
import "@fontsource/alatsi";
import elephantRight from "../../public/favicon.svg";
import elephantLeft from "../../public/favicon_left.svg";

const bookenda =
  "https://www.tbdine.com/book/restaurant/restaurant-babar?idApp=71062&language=fr";
---

<div id="navbar">
  <a href="/">
    <img src={elephantRight.src} alt="Logo left" />
  </a>
  <a class="hover-effect" href="/Menu">Menu</a>
  <a class="hover-effect" href="/Drinks">À boire</a>
  <a class="hover-effect" href="/Takeout">Pour emporter</a>
  <a class="hover-effect" href={bookenda} target="_blank">Réservation</a>
  <a class="hover-effect" href="/Contact">Contact</a>
  <a href="/">
    <img src={elephantLeft.src} alt="Logo right" />
  </a>
  <script>
    let prevScrollpos = window.pageYOffset;
    window.onscroll = function () {
      const currentScrollPos = window.pageYOffset;
      if (prevScrollpos > currentScrollPos) {
        // if scrolling up
        document.getElementById("navbar").style.top = "0";
      } else {
        // if scrolling down
        document.getElementById("navbar").style.top = "-110px";
      }
      prevScrollpos = currentScrollPos;
    };
  </script>
</div>

<style>
  #navbar {
    padding: 1rem;
    transition: top 0.5s ease-in-out;
  }
  a {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: rgb(50, 50, 50);
    font-family: "Alatsi", sans-serif;
    max-height: 100%;
    height: 45px;
    padding: 0 8px;
    text-transform: uppercase;
    border-radius: 10px;

    font-size: 1rem;
  }
  @media screen and (max-width: 800px) {
    a {
      font-size: 0.7rem;
    }
  }
  a img {
    min-width: 55px;
    max-height: 100%;
  }

  .hover-effect {
    transition: all 0.3s ease-in-out;
  }

  .hover-effect:hover {
    color: #faf2e5;
    background-color: rgb(50, 50, 50);
  }

  @keyframes quickShake {
    0% {
      transform: rotate(-3deg);
    }
    50% {
      transform: rotate(3deg);
    }
    100% {
      transform: rotate(-3deg);
    }
  }
  img:hover {
    animation: 0.5s ease quickShake;
    animation-iteration-count: infinite;
  }
</style>
